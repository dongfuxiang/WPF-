<Window
    x:Class="_07_02_Application的任务.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:_07_02_Application的任务"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="400"
    Height="450"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <Button
                x:Name="btnCreateWindow"
                Height="30"
                Margin="10"
                Click="btnCreateWindow_Click"
                Content="Show Document Window" />
            <Button
                x:Name="btnUpdateWindow"
                Height="30"
                Margin="10"
                Click="btnUpdateWindow_Click"
                Content="Show Document Window" />
        </StackPanel>
    </Grid>
</Window>
