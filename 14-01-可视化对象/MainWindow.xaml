        <Style TargetType="{x:Type RadioButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type RadioButton}">
                        <StackPanel>
                            <Border
                                x:Name="border"
                                Margin="10"
                                Padding="10"
                                BorderThickness="1"
                                CornerRadius="5">
                                <Border
                                    Width="90"
                                    Height="90"
                                    Background="{TemplateBinding Background}" />
                            </Border>
                            <TextBlock
                                x:Name="tbContent"
                                HorizontalAlignment="Center"
                                Text="{TemplateBinding Content}" />
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="Black" />
                                <Setter TargetName="tbContent" Property="FontWeight" Value="Bold" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <RadioButton Background="{StaticResource DBSelect}" Content="Select/Move" />
            <RadioButton Background="{StaticResource DBSquare}" Content="Add Square" />
            <RadioButton Background="{StaticResource DBDelete}" Content="Delete Square" />
        </StackPanel>

        <Border
            Grid.Column="1"
            Margin="5"
            BorderBrush="LightGray"
            BorderThickness="1"
            CornerRadius="5">
            <Canvas />
        </Border>

    </Grid>
</Window>
