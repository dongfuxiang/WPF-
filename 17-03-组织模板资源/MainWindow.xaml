<Window
    x:Class="_17_03_组织模板资源.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:_17_03_组织模板资源"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <!--
        分解按钮控件模板,建立资源词典
    -->

    <Grid>
        <StackPanel>
            <Button
                Width="150"
                Height="50"
                Margin="10"
                Content="Button A"
                FontSize="25" />
            <Button
                Width="150"
                Height="50"
                Margin="10"
                Content="Button B"
                FontSize="25" />
            <Button
                Width="150"
                Height="50"
                Margin="10"
                Click="Button_Click"
                Content="更改主题"
                FontSize="25" />
        </StackPanel>


    </Grid>
</Window>
