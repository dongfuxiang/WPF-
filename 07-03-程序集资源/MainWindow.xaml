<Window
    x:Class="_07_03_程序集资源.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:_07_03_程序集资源"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="400"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="10">
            <Button Margin="10" Click="Button_Click" Content="读取资源" />
            <Image Name="image" Margin="10" Source="Images/1.jpg" />
            <Button
                x:Name="btnImage"
                Margin="10"
                Click="btnImage_Click"
                Content="Read Image" />
            <Button
                x:Name="btnReadWebImage"
                Margin="10"
                Click="btnReadWebImage_Click"
                Content="ReadWebImage" />
        </StackPanel>
    </Grid>
</Window>
