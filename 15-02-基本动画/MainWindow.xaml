<Window
    x:Class="_15_02_基本动画.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:_15_02_基本动画"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <Button
                x:Name="btn"
                Width="100"
                Height="30"
                Margin="10"
                Click="Button_Click"
                Content="Button A" />
            <Button
                Width="100"
                Height="30"
                Margin="10"
                Content="Button B" />
        </StackPanel>
    </Grid>
</Window>
